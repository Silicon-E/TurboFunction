    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Turbo: Process all",
            "type": "python",
            "request": "launch",
            "program": "turbo_preprocess.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Turbo: Process current file",
            "type": "python",
            "request": "launch",
            "program": "turbo_preprocess.py",
            "args": ["--rebuild", "\"${relativeFile}\""],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Turbo: Debug current file",
            "type": "python",
            "request": "launch",
            "program": "turbo_preprocess.py",
            "args": ["--rebuild", "--verbose-parse", "\"${relativeFile}\""],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}